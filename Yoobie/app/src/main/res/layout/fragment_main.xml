<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"  android:background="#87CEEB"
    android:layout_height="match_parent" tools:context="udenconstruction.yoobie.MainFragment">


    <RelativeLayout
        android:layout_width="100dp"
        android:id="@+id/mySwitch"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView11"
        android:layout_centerHorizontal="true">

        <View
            android:id="@+id/track"
            android:layout_width="64dp"
            android:layout_height="4dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="#000000" />

        <View
            android:id="@+id/thumb"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@drawable/thumby"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/thumb2"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="@drawable/thumby"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45sp"
        android:text="00 | 00 | 00 | 00"
        android:textColor="#FFFFFF"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="    Days               Hours            Minutes         Seconds "
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="Stop"
        android:textColor="#FFFFFF"
        android:id="@+id/textView10"
        android:layout_marginTop="125dp"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#FFFFFF"
        android:text="Start"
        android:id="@+id/textView11"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:textSize="24sp"
        android:text="ARCHIVEMENTS"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:onClick="archieveCallback"
        android:background="@drawable/main_button"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/archieveButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        tools:targetApi="honeycomb" />

    <View
        android:id="@+id/UnderLine22"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/archieveButton"
        android:layout_centerHorizontal="true"
        android:background="#FAEBD7" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="PROFILE"
        android:onClick="profileCallback"
        android:background="@drawable/main_button"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/profileButton"
        android:layout_above="@+id/UnderLine22"
        android:layout_centerHorizontal="true"
        tools:targetApi="honeycomb" />


</RelativeLayout>
